<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <% if @user == current_user %>
          <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" %>
        <% else %>
          <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, user_path(current_user), class:"btn btn-outline-secondary btn-block"%>
        <% end %>
      </div>

      <div class="md-3">
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", class:"form-control" %><br />
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, id:"inputBody", class:"form-control" %><br />
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user)  %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
