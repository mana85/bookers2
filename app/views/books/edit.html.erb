<div class="container">
  <div class="row">
    <div class="mx-auto col-8 col-sm-8 col-lg-7 col-xl-5">

      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", placeholder:"Book title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputBody">Opinion</label>
          <%= f.text_area :body, id:"inputBody", placeholder:"Book opinion", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <div>
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", "/books" %>
      </div>

    </div>
  </div>
</div>