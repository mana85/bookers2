<h2>Bookの編集</h2>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, id:"inputTitle", placeholder:"本のタイトル"%><br />
  <label for="inputBody">Body</label>
  <%= f.text_area :body, id:"inputBody", placeholder:"本の紹介"%><br />
  <%= f.submit '変更を保存' %>
<% end %>
<p><%= link_to "Show", book_path(@book.id) %></p>
<p><%= link_to "Back", "/books" %></p>
