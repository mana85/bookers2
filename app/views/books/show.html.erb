<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tr>
          <%= image_tag @user.get_profile_image(100,100) %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>

      <div class="row">
        <% if @user == current_user %>
          <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" %>
        <% else %>
          <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, user_path(current_user), class:"btn btn-outline-secondary btn-block"%>
        <% end %>
      </div>

      <div class="md-3">
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, id:"inputTitle", placeholder:"Title", class:"form-control" %><br />
          <label for="inputBody">Body</label>
          <%= f.text_area :body, id:"inputBody", placeholder:"Opinion", class:"form-control" %><br />
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tr>
          <td>
            <%= image_tag @book.user.get_profile_image(100,100) %><br />
            <%= link_to @book.user.name, user_path(@book.user.id)%>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
          </td>
          <td>
            <%= @book.body%>
          </td>
          <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success  btn-sm" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger  btn-sm", "data-confirm" => "本当に削除しますか？"  %>
          </td>
          <% end %>
        </tr>
      </table>
    </div>

  </div>
</div>
