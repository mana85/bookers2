<!--ユーザーの詳細画面-->

<div class="container">
  <div class="row">

    <div class="col-md-3">
      <%= render 'info', user: @user %>

      <div class="row">
        <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, edit_user_path(@user), class:"btn btn-outline-secondary btn-block" %>
      </div>

      <%= render 'books/new', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to image_tag(book.user.get_profile_image(80,80)) %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body%>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>