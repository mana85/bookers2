<div class="container">
  <div class="row">

    <div class="col-md-3">
      <!--部分テンプレート-->
      <%= render 'info', user: @user %>

      <div class="row">
        <%= link_to '<i class="fas fa-user-cog"></i>'.html_safe, edit_user_path(@user), class:"btn btn-outline-secondary btn-block" %>
      </div>

      <div class="md-3">
        <h2 class="mt-3">New book</h2>
        <div class="form-group">
        <%= form_with model: @book, url: '/books', method: :post do |f| %>
          <label for="Title">Title</label>
          <%= f.text_field :title, id:"Title", class:"form-control" %><br />
          <label for="Body">Opinion</label>
          <%= f.text_area :body, id:"Body", class:"form-control" %><br />
          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
