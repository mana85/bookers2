<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h2>User info</h2>

      <% if @user.errors.any? %>
        <h3>
          <%= @user.errors.count %>error prohibited this obj from being saved:
        </h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do|f| %>
        <div class="form-group">
          <label for="Name">Name</label>
          <%= f.text_field :name, autofocus:true, id:"Name", placeholder:"名前", class:"form-control" %><br />
        </div>
        <div class="form-group">
          <label for="Image">Image</label>
          <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*", class:"form-control-file user_image"  %><br />
        </div>
        <div class="form-group">
          <label for="Introduction">Introduction</label>
          <%= f.text_area :introduction, rows:"3", id:"Introduction", placeholder:"自己紹介", class:"form-control" %><br />
        </div>
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>